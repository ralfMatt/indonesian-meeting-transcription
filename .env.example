# Indonesian Meeting Transcription App - Root Environment Configuration
# This file is for project-wide environment variables
# Copy this file to .env and fill in your actual values

# =================================================================
# DEVELOPMENT ENVIRONMENT
# =================================================================
NODE_ENV=development

# =================================================================
# PROJECT METADATA
# =================================================================
PROJECT_NAME=Indonesian Meeting Transcription
PROJECT_VERSION=1.0.0
PROJECT_DESCRIPTION=Professional meeting transcription and summarization for Indonesian SMEs

# =================================================================
# DOCKER CONFIGURATION (if using Docker)
# =================================================================
# Database
DATABASE_CONTAINER_NAME=meeting-transcription-db
DATABASE_PORT=5432

# Redis (for session storage if needed)
REDIS_CONTAINER_NAME=meeting-transcription-redis
REDIS_PORT=6379

# =================================================================
# GLOBAL SECURITY SETTINGS
# =================================================================
# Global API key for internal service communication
GLOBAL_API_KEY=your-global-api-key-here

# Deployment environment
DEPLOYMENT_ENV=development

# =================================================================
# MONITORING & LOGGING
# =================================================================
# Application insights or monitoring service
MONITORING_KEY=your-monitoring-key-here
LOGGING_LEVEL=info

# =================================================================
# BACKUP CONFIGURATION
# =================================================================
# Database backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =================================================================
# INDONESIAN BUSINESS SETTINGS
# =================================================================
# Default business settings for Indonesian SMEs
DEFAULT_TIMEZONE=Asia/Jakarta
DEFAULT_CURRENCY=IDR
DEFAULT_LANGUAGE=id

# Business hours (for rate limiting and usage analytics)
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=18:00

# =================================================================
# FEATURE FLAGS
# =================================================================
# Enable/disable major features
FEATURE_AUDIO_TRANSCRIPTION=true
FEATURE_MEETING_SUMMARIES=true
FEATURE_USER_MANAGEMENT=true
FEATURE_COMPANY_REGISTRATION=true
FEATURE_EXPORT_FUNCTIONS=true