# Indonesian Meeting Transcription Frontend - Environment Configuration
# Copy this file to .env and fill in your actual values

# =================================================================
# API CONFIGURATION
# =================================================================
# Backend API URL (change to your production backend URL)
REACT_APP_API_URL=http://localhost:3001
# WebSocket URL for real-time transcription
REACT_APP_WS_URL=ws://localhost:3002

# =================================================================
# SUPABASE CONFIGURATION
# =================================================================
# Your Supabase project URL
REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co
# Your Supabase anon/public key (safe to expose in frontend)
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key

# =================================================================
# FEATURE FLAGS
# =================================================================
# Enable mock data for development/testing
REACT_APP_ENABLE_MOCK_DATA=true
# Enable debug mode (shows detailed console logs)
REACT_APP_ENABLE_DEBUG=false
# Enable OpenAI integration
REACT_APP_OPENAI_ENABLED=true

# =================================================================
# PERFORMANCE CONFIGURATION
# =================================================================
# Maximum file size for upload in MB
REACT_APP_MAX_FILE_SIZE_MB=100
# Chunk interval for real-time processing (milliseconds)
REACT_APP_CHUNK_INTERVAL_MS=1000
# Request timeout in milliseconds
REACT_APP_REQUEST_TIMEOUT_MS=30000

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# Enable strict security mode
REACT_APP_STRICT_SECURITY=true
# Enable HTTPS-only cookies in production
REACT_APP_SECURE_COOKIES=false

# =================================================================
# INDONESIAN BUSINESS SETTINGS
# =================================================================
# Enable Indonesian-specific features
REACT_APP_ENABLE_INDONESIAN_FEATURES=true
# Default timezone for Indonesian businesses
REACT_APP_DEFAULT_TIMEZONE=Asia/Jakarta
# Business registration features
REACT_APP_ENABLE_COMPANY_REGISTRATION=true

# =================================================================
# DEVELOPMENT SETTINGS (NOT FOR PRODUCTION)
# =================================================================
# Skip authentication for development
REACT_APP_SKIP_AUTH=false
# Enable development tools
REACT_APP_DEV_TOOLS=false